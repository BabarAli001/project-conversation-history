<div class="form">
  <h1>Log In</h1>

  <%= form_with(url: login_path, class: "form__container") do |f| %>
    <div class="form__field">
      <%= f.label :email, class: "form__label" %>
      <%= f.email_field :email, class: "form__input" %>
    </div>

    <div class="form__field">
      <%= f.label :password, class: "form__label" %>
      <%= f.password_field :password, class: "form__input" %>
    </div>

    <%= f.submit "Log In", class: "button button--full form__button" %>
  <% end %>

  <div class="form__links">
    <p>Don't have an account? <%= link_to "Sign up", signup_path %></p>
  </div>
</div>
