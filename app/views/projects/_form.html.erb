<%= form_for(@project, class: "form__container") do |f| %>
  <% if @project.errors.any? %>
    <div class="flash flash--error">
      <ul>
        <% @project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form__field">
    <%= f.label :title, class: "form__label" %>
    <%= f.text_field :title, class: "form__input" %>
  </div>

  <div class="form__field">
    <%= f.label :description, class: "form__label" %>
    <%= f.text_area :description, rows: 4, class: "form__input" %>
  </div>

  <div class="form__field">
    <%= f.label :status, class: "form__label" %>
    <%= f.select :status, Project.statuses.keys, { selected: @project.status }, class: "form__input" %>
  </div>

  <div class="form__actions">
    <%= f.submit class: "button" %>
    <%= link_to "Back", back_path, class: "button button--secondary" %>
  </div>
<% end %>
