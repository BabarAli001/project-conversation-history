<div class="form">
  <h1>Sign Up</h1>

  <%= form_with(model: @user, url: signup_path, class: "form__container") do |f| %>
    <% if @user.errors.any? %>
      <div class="flash flash--error">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form__field">
      <%= f.label :email, class: "form__label" %>
      <%= f.email_field :email, class: "form__input" %>
    </div>

    <div class="form__field">
      <%= f.label :password, class: "form__label" %>
      <%= f.password_field :password, class: "form__input" %>
    </div>

    <div class="form__field">
      <%= f.label :password_confirmation, class: "form__label" %>
      <%= f.password_field :password_confirmation, class: "form__input" %>
    </div>

    <%= f.submit "Sign Up", class: "button button--full form__button" %>
  <% end %>

  <div class="form__links">
    <p>Already have an account? <%= link_to "Log in", login_path %></p>
  </div>
</div>
